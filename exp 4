def mod_inverse(a, m):
    # Extended Euclidean Algorithm to find modular inverse
    for i in range(1, m):
        if (a * i) % m == 1:
            return i
    return None

def affine_encrypt(plaintext, a, b):
    result = ''
    for char in plaintext.upper():
        if char.isalpha():
            c = chr((a * (ord(char) - ord('A') + b) % 26) + ord('A'))
            result += c
        else:
            result += char
    return result

def affine_decrypt(cipher, a, b):
    result = ''
    a_inv = mod_inverse(a, 26)
    if a_inv is None:
        raise ValueError("No modular inverse for 'a'")
    for char in cipher.upper():
        if char.isalpha():
            p = (a_inv * ((ord(char) - ord('A')) - b)) % 26
            result += chr(p + ord('A'))
        else:
            result += char
    return result

# Example usage
a = 5
b = 8
plaintext = "HELLO"
cipher = affine_encrypt(plaintext, a, b)
print("Encrypted:", cipher)
print("Decrypted:", affine_decrypt(cipher, a, b))
